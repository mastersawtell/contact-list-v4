<div class="container">
  <div class="col-md-14 column">
    <div style="color:black" class="jumbotron">
      <h1>
        The Ultimate Contact List
      </h1>
      <p>
        V4.0
      </p>
      <p>
        <a class="btn .btn-default btn-large" id="createContact" data-target="createForm" href="#">
        <span class="glyphicon glyphicon-download-alt"></span>Enter Contact</a>

        <a class="btn .btn-default btn-large" id="listContacts" data-target="listFunction" href="#">
        <span class="glyphicon glyphicon-user"></span>List All Contacts</a>

        <a class="btn .btn-default btn-large" id="searchContacts" data-target="search" href="#">
        <span class="glyphicon glyphicon-search"></span>Search Contacts</a>

        <a class="btn .btn-default btn-large" id="specificContact" data-target="displayRecord" href="#">
        <span class="glyphicon glyphicon-list-alt"></span>Find a Contact by ID</a>
      </p>
    </div>

    <div id="controlArea">
      <div id="createForm"  style="display:none" class="well">
        <h3> Create a Contact </h3>
          First Name:<br>
          <input type="text" class="form-control" id="first_name">
          <br>
          Last Name:<br>
          <input type="text" class="form-control" id="last_name">
          <br>
          Phone:<br>
          <input type="text" class="form-control" id="phone_num">
          <br>
          Email:<br>
          <input type="text" class="form-control" id="email">
          <br>
          <button class=".btn-default" id="createSubmit"> Submit </button>
      </div>
      
      <div id="search" style="display:none" class="well">
        <h3> Search</h3>
          <input type="text" class="form-control" id="query">
          <br>
        <button class=".btn-default" id="searchSubmit"> Submit </button>
      </div>

      <div id="displayRecord" style="display:none" class="well">
        <h3> Enter a Contact ID</h3>
          ID:<br>
          <input type="text" class="form-control"  id="idSearch">
          <br>
        <button class=".btn-default" id="displayRecordButton"> Submit </button>
      </div>
    </div>

    <div id="results" style="display:none" class="well">
    </div>

  </div>
</div>